<UserControl
    x:Class="ImperatorCounter.WinUI.Controls.NormalBuildingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ImperatorCounter.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Border>
            <StackPanel>
                <TextBox Header="Theaters built at start" Text="{x:Bind ViewModel.settings.Buildings.SetTheaters}" />
                <TextBox Header="Theaters to rebuild as Temples at culture majority" Text="{x:Bind ViewModel.settings.Buildings.SetRebuildTheaters}" />
                <TextBox Header="Temples built at start" Text="{x:Bind ViewModel.settings.Buildings.SetTemple}" />
                <TextBox Header="Temples to rebuild as Theaters at religous majority" Text="{x:Bind ViewModel.settings.Buildings.RebuildTemples}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
